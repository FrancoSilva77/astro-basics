---
import Layout from '../layouts/Layout.astro';

const name = 'Franco Silva';
const title = 'Home Page'
---

<Layout title={title}>

  <h1>{name}</h1>

  <p>Momento actual: {new Date().toLocaleTimeString()}</p>
  <p id="current-time">Momento actual real:</p>


	<script>
  // Client only
  const currentTimeParagraph = document.querySelector('#current-time') as HTMLParagraphElement

  const currentTime: string = new Date().toLocaleTimeString();

  currentTimeParagraph.innerText = `Momento actual: ${currentTime}`;
</script>
</Layout>


